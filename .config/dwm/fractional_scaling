########################
## Fractional scaling ##
########################

# To set fractional scaling some variables need to be changed

# .zprofile

export GDK_SCALE=1
export GDK_DPI_SCALE=0.8
export QT_AUTO_SCREEN_SET_FACTOR=0
export QT_SCALE_FACTOR=0.8
export QT_FONT_DPI=120

# Xresources

Xft.dpi: 120

# xinitrc

xrandr --output HDMI-A-0 --scale 1.25x1.25
